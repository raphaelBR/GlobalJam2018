/// @description  day_name(weekday number)
/// @function  day_name
/// @param weekday number

var (day) = argument[0]

if day == 0
    {
    return ("SUNDAY")
    }
if day == 1
    {
    return ("MONDAY")
    }
if day == 2
    {
    return ("TUESDAY")
    }
if day == 3
    {
    return ("WEDNESDAY")
    }
if day == 4
    {
    return ("THURSDAY")
    }
if day == 5
    {
    return ("FRIDAY")
    }
if day == 6
    {
    return ("SATURDAY")
    }
